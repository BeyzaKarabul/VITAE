<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lavie.users">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- uygulamaya internet bağlantısı izni verildi -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/menu_post"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.project.uimodule.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.uimodule.DashboardActivity"/>
        <activity android:name="com.project.uimodule.main.MenuActivity"/>
        <activity android:name="com.project.uimodule.signup.SignUpActivity"/>
        <activity android:name="com.project.uimodule.main.PostActivity"/>
        <activity android:name="com.project.uimodule.main.seach.SearchActivity"/>
        <meta-data android:name="android.app.default_searchable" android:value="com.project.uimodule.main.MenuActivity" />
    </application>

</manifest>