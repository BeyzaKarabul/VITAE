<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/user_search_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_item_user_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/search_item_user_profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription=""
            android:scaleType="fitCenter">
        </ImageView>

        <TextView
            android:id="@+id/search_item_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_item_user_profile_picture"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/search_item_user_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_user_name_text"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/search_item_user_profile_picture"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/search_item_user_similarity_percent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/search_item_user_profile_picture"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>